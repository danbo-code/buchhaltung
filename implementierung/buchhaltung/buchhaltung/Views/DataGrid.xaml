<UserControl x:Class="Shell.Views.DataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shell.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <ComboBox></ComboBox>
        <ComboBox></ComboBox>
        <DataGrid x:Name="test" Grid.Row="1" ItemsSource="{Binding ''}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="IDEinkauf" Binding="{Binding IdEinkauf}" />
                <DataGridTextColumn Header="Betrag"  Binding="{Binding BetragNetto}" />
                <DataGridTextColumn Header="Datum"  Binding="{Binding Datum}" />
                <DataGridTextColumn Header="IDSteuersatz" Binding="{Binding IdSteuersatz}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
